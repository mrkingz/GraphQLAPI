{
  "name": "graphqlapi",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && babel src -d dist",
    "start:dev": "nodemon --watch src ./src/server --exec babel-node",
    "start": "babel-node ./dist/server",
    "clean": "rm -rf dist",
    "lint": "eslint './**/*.js'",
    "lint:fix": "eslint './**/*.js' --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrkingz/GraphQLAPI.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mrkingz/GraphQLAPI/issues"
  },
  "homepage": "https://github.com/mrkingz/GraphQLAPI#readme",
  "dependencies": {
    "@sentry/node": "latest",
    "dotenv": "^8.2.0",
    "eslint-plugin-prettier": "^3.1.2",
    "express": "latest",
    "express-graphql": "^0.9.0",
    "graphql": "^14.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.6",
    "@babel/node": "^7.8.4",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier-cli": "^0.1.0",
    "prettier-eslint": "^9.0.1",
    "prettier-eslint-cli": "^5.0.0"
  },
  "babel": {
    "presets": [
      "@babel/env",
      {
        "targets": {
          "node": "current"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  }
}
